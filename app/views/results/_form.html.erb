<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="spacer-10"></div>

    <div class="field">
    <p class="font-18"><strong>Did you review this living will with your surrogate or your MPOA?</strong></p>
    <%= f.radio_button :review_with_mpoa, 'yes' %>Yes<br>
    <%= f.radio_button :review_with_mpoa, 'no' %>No<br>
  </div>

  <div class="field">
    <p class="font-18"><strong>Do you have any other wishes or directions you want your health care team to know? </strong></p>
    <%= f.text_area :comments, size: '32x10' %>
  </div>
  <div class="spacer-10"></div>
  <div class="actions centered">
    <%= submit_tag "Next", class: "btn btn-large btn-primary" %>
  </div>

  <div class="spacer-20"></div>
<% end %>
